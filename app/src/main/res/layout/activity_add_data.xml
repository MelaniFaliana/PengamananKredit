                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_gray"
                android:textSize="14sp"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="false"
                android:hint="@string/nama_hint"/>

